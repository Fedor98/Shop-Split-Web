    <div class="sign_up_form">
        <h1>User form</h1>
        <div>
            <h3>First Name:</h3>
            <input type="text" id="firstName" placeholder="First name" /><br/>
            <h3>Last Name:</h3>
            <input type="text" id="lastName" placeholder="Last name" /><br/>
            <h3>Password:</h3>
            <input type="password" id="password" placeholder="Password" /><br/>
            <h3>Mail:</h3>
            <input type="text" id="mail" placeholder="Mail" /><br/>
            <h3>Age:</h3>
            <input type="number" id="age" placeholder="Age" /><br/>
            <button id="signupButton" onclick="onClickButton();">Signup</button>
        </div>
    </div>


    <script>
        function onClickButton(){
            var firstName = $("#firstName").val();
            var lastName = $("#lastName").val();
            var password = $("#password").val();
            var mail = $("#mail").val();
            var age = $("#age").val();
            
            if (firstName && lastName && password && mail && age) {
                $.post(
                    '/create_user',
                    {firstName: firstName, lastName:lastName, password: password, mail: mail, age: age},
                    function () {
                        window.location = "/currentUser";
                    }
                ).fail(function(res){
                    alert("Error fail: " + res.getResponseHeader('error'));
                });
            } else {
                alert("A username and password is required");
            }
        }
    </script>